<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/area_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
        android:id="@+id/ima1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cliente"

            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
        />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/Til_nombre"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="32dp">


             <EditText
                 android:id="@+id/inText"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:inputType="text"
                 android:hint="nombre"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
             />
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/area_fono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/area_nombre"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ima2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_telefono"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/Til_fonoa"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="32dp">

            <EditText
                android:id="@+id/inText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="text"
                android:hint="telefono"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/area_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/area_fono"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ima3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_correo"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/Til_correo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="32dp">

            <EditText
                android:id="@+id/inText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="text"
                android:hint="correo"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>

</RelativeLayout>